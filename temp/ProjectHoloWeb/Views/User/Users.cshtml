@using ProjectHoloWeb.Models;
@{
    ViewBag.Title = "Người dùng";
    Layout = "~/Views/Shared/_Layout2.cshtml";
    ProjectHoloWeb.Models.User user = Model as ProjectHoloWeb.Models.User;

}

    <body>
        <div class="container">
            <div class="hidden-xs" style="margin-bottom:10px;"></div>
            <div class="row">
                <div class="col-md-3">
                    <div class="box box-active auto-height">
                        <div class="box-header with-border">
                            <h3 class="box-title">Điều hướng</h3>
                            <div class="box-body no-padding">
                                <ul class="nav nav-pills nav-stacked" id=infor>
                                    <li role="presentation" class="active"><a href="@Url.Action("Users","User", new { id = Session["TaikhoanID"].ToString()})" aria-controls="profile" role="tab" data-toggle="tab"><i class="fa fa-user fa-fw"></i> Thông tin cá nhân</a></li>
                                    <li role="presentation"><a href="@Url.Action("Index","TheoDoi")"><i class="fa fa-eye fa-fw"></i> Truyện đang theo dõi</a></li>
                                    <li role="presentation"><a href="@Url.Action("Index","TransTeamUser")"><i class="fa fa-users"></i> Nhóm dịch</a></li>
                                    @if ((!String.IsNullOrEmpty(user.IDtransper)))
                                    {
                                        if (user.IDtransper.CompareTo("TRAPER001") == 0)
                                        {
                                <li role="presentation"><a href="@Url.Action("Index","DangTruyen")"><i class="fa fa-upload"></i> Đăng truyện</a></li>
                                                    <li role="presentation"><a href="@Url.Action("Index","DangChapter")"><i class="fa fa-upload"></i> Đăng chapter</a></li>}

                                                                }

                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-9">
                    <div class="tab-content">
                        <div role="tabpanel" class="tab-pane active" id="profile">
                            <div class="box box-active">
                                <div class="box-header with-border">
                                    <h3 class="box-title">Thông tin cá nhân</h3>
                                </div>
                                <form method="POST" action="~/User/Users" accept-charset="UTF-8" role="form">
                                    <input name="_token" type="hidden" value="vWt5xhbEHgmCNbvZvKtcG3ojRmjrfXBPRCfEOMRD">
                                    <div class="box-body">
                                        <div class="form-group row">
                                            <label for="username" class="col-sm-2 col-form-label">Username:</label>
                                            <div class="col-sm-4">
                                                <input class="form-control col-sm-4" name="username" type="text" value="@Model.username" id="username">
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label for="email" class="col-sm-2 col-form-label">Email:</label>
                                            <div class="col-sm-4">
                                                <input class="form-control col-sm-4" name="email" type="email" value="@Model.mail" id="email">
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label for="password" class="col-sm-2 col-form-label">Mật khẩu:</label>
                                            <div class="col-sm-4">
                                                <input class="form-control col-sm-4" name="password" type="password" value="@Model.pass" id="password">
                                            </div>
                                        </div>

                                        <div class="form-group row">
                                            <label for="password_confirmation" class="col-sm-2 col-form-label">Xác nhận lại:</label>
                                            <div class="col-sm-4">
                                                <input class="form-control " name="password_confirmation" type="password" value="@Model.pass" id="password_confirmation">
                                            </div>
                                        </div>
                                        <p>
                                            @ViewData["Loi"]
                                        </p>
                                    </div>
                                    <div class="box-footer pdn">
                                        <input class="btn btn-success" type="submit" value="Lưu">
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
        

        <script>

            thongBaoLuu();
            function thongBaoLuu()
            {
                let tb = @ViewBag.thongBaoUserLuuThayDoi;
                if (tb != null) {
                    return alert("Thông tin thay đổi đã được lưu");
                }
            }



            $(function () {
                $('#infor a').on('click', function (e) {
                    e.preventDefault()
                    $(this).tab('show')
                })
                $('#infor a[href="#profile"]').tab('show')
            })
        </script>
    </body>


