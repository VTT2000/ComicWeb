@using ProjectHoloWeb.Models;
@using PagedList.Mvc;
@model PagedList.PagedList<Comic>

@{
    ViewBag.Title = "Trang chủ";
    Layout = "~/Views/Shared/_Layout.cshtml";

    List<TransTeam> transTeams = ViewBag.listTEA as List<TransTeam>;
    List<ComicTran> comicTrans = ViewBag.listCOMTRA as List<ComicTran>;
    List<Catergory> catergories = ViewBag.listCAT as List<Catergory>;
    List<ComicCatergory> comicCatergories = ViewBag.listCOMCAT as List<ComicCatergory>;
    List<Chapter> chapters = ViewBag.listCHA as List<Chapter>;

    Comic x = Model.ToList().OrderByDescending(p => p.created).Last();
}
<body>

    <div class="container">
        <div class="hidden-xs" style="margin-bottom:10px;"></div>
        <div class="row row-gutter-5">
            <div class="col-md-8">
                <div id="feature-manga" class="clearfix">
                    <a class="feature-cover pull-left" href="@Url.Action("DetailComic","Comic", new { id = x.IDcomic })">
                        <!--<img src="~/Content/truyen-doremon-ngan-chap-01.png" class="img-responsive" alt="doraemon">-->
                        <!--<img src="data:image/jpeg;base64,"/>-->
                        <img src="@x.ImageLink" class="img-reponsive" alt="@x.comic1" />

                    </a>
                    <div class="feature-info" style="padding-left:5px">
                        <h3 class="feature-title">
                            <a href="@Url.Action("DetailComic","Comic", new { id = x.IDcomic })" title="">
                                <span>@x.comic1</span>
                            </a>
                        </h3>
                        @*<p class="feature-line text-ellipsis">
                                <strong>Tên khác:</strong>
                                <span> @x.comic1</span>
                            </p>*@
                        <p class="feature-line">
                            <strong>Thể loại:</strong>
                            @foreach (ComicCatergory item in comicCatergories.FindAll(p => p.IDcomic == x.IDcomic))
                            {
                                foreach (Catergory i in catergories)
                                {
                                    if (i.IDcatergory == item.IDcatergory)
                                    {
                                        if (item == comicCatergories.FindAll(p => p.IDcomic == x.IDcomic).First())
                                        {
                                            <a href="@Url.Action("Type","Comic", new { id = i.IDcatergory})"><span> @i.catergory1</span></a> 
                                        }
                                        else
                                        {
                                            <a href="@Url.Action("Type","Comic", new { id = i.IDcatergory})"><span>, @i.catergory1</span></a>
                                        }

                                    }
                                }
                            }
                        </p>
                        <p class="feature-line">
                            <strong>Tác giả:</strong><a href="@Url.Action("Index","Author", new { id = x.Author.IDauthor })"><span> @x.Author.author1</span></a>
                        </p>
                        <p class="feature-line">
                            <strong>Nhóm dịch:</strong>
                            @foreach (ComicTran item in comicTrans.FindAll(p => p.IDcomic == x.IDcomic))
                            {
                                foreach (TransTeam i in transTeams)
                                {
                                    if (i.IDteam == item.IDteam)
                                    {
                                        if (item == comicTrans.FindAll(p => p.IDcomic == x.IDcomic).First())
                                        {
                                            <span> @i.team</span>
                                        }
                                        else
                                        {
                                            <span>, @i.team</span>
                                        }

                                    }
                                }
                            }
                        </p>
                        <p class="feature-line">
                            <strong>Tình trạng:</strong>
                            <span class="label label-info"> @x.status</span>
                        </p>
                        <p class="feature-line"><strong>Sơ lược:</strong><span> @x.description</span></p>
                        <p class="feature-line"></p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="top-team">
                    <div class="cover"></div>
                    <div class="overlay clearfix">
                        <div class="top-team-box-thumbnail pull-left">
                            <h3 class="m-name"><a>
                                    @foreach (ComicTran item in comicTrans.FindAll(p => p.IDcomic == x.IDcomic))
                                    {
                                        foreach (TransTeam i in transTeams)
                                        {
                                            if (i.IDteam == item.IDteam)
                                            {
                                                if (item == comicTrans.FindAll(p => p.IDcomic == x.IDcomic).First())
                                                {
                                                    <span> @i.team</span> 
                                                    }
                                                 else
                                                    {
                                                    <span>, @i.team</span>
                                                   }

                                                  }
                                              }
                                          }
                                </a>
                            </h3>
                        </div>
                    </div>
                    <div class="top-team-box-vote">
                        <p class="m-line"><strong>Sơ lược:</strong> </p>
                    </div>
                </div>
            </div>
        </div>
        <h2 class="title">Truyện Mới</h2>
        <div class="row row gutter-5">
            <div class="col-md-8">
                <div class="row">
                    @foreach (var item in Model)
                    {
                        <div class="col-6 col-md-3 comic" style="margin: 0 20px">
                            <a href="@Url.Action("DetailComic", "Comic", new { id = item.IDcomic })">
                                <img src="@item.ImageLink">
                            </a>
                            <p></p>
                            <h4><a href="@Url.Action("DetailComic", "Comic", new { id = item.IDcomic })">@item.comic1</a></h4>
                            <p>
                                @for (int i = 0; i < 5; i++)
                                {
                                    if (i < item.ratting)
                                    {
                                        <i class="fa fa-star" style="color:yellow" aria-hidden="true"></i>
                                    }
                                    else
                                    {
                                        <i class="fa fa-star-o" style="color:yellow" aria-hidden="true"></i>
                                    }
                                }
                            </p>

                            @if (chapters.Where(p => p.IDcomic == item.IDcomic).Count() != 0)
                            {
                                <p><a href="@Url.Action("Chapter","Comic",new { id = @chapters.Where(p => p.IDcomic == item.IDcomic).OrderByDescending(m => m.chapter1).First().chapter1, idc = item.IDcomic})">@chapters.Where(p => p.IDcomic == item.IDcomic).OrderByDescending(m => m.chapter1).First().chapter1</a></p>
                            }
                            else
                            {
                                <p><a href="/truyen/@item.IDcomic">Truyện chưa cập nhật</a></p>
                            }

                        </div>
                    }
                </div>
                <div class="row">                   
                    <div class="MenuTrang">
                        @Html.PagedListPager(Model, Page => Url.Action("home", "Home", new { page = Page }))
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="ctd-tabs ranking">
                    <ul class="nav nav-tabs" id="myTab" role="tablist">
                        <li style="color:white; margin-left:10px">Truyện hot</li>
                    </ul>
                    <div class="tab-content" id="myTabContent">
                        <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                            <table class="table">
                                @foreach (var item in Model.ToList())
                                {
                                    <tbody>
                                        <tr>
                                            <td width="20">@item.IDcomic.Substring(3).</td>
                                            <td><a href="/Comic/DetailComic/@item.IDcomic" >@item.comic1</a></td>
                                            <td width="130" class="text-right">@item.views lượt xem</td>
                                        </tr>
                                    </tbody>
                                }
                            </table>
                        </div>

                    </div>
                </div>
            </div>

        </div>
    </div>
    <script>

        $(function () {
            $('#myTab a').on('click', function (e) {
                e.preventDefault()
                $(this).tab('show')
            })
            $('#myTab a[href="#home"]').tab('show')
        })
    </script>
   
</body>
