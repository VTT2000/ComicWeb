                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action( "Index", "Tacgia")">
                                <i class="nav-icon fa fa-id-badge"></i>
                                <p>Tác giả</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action( "Index", "Listtruyen")">
                                <i class="fa fa-list-ul nav-icon"></i>
                                <p>Danh sách truyện</p>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action( "Index", "Useradmin")">
                                <i class="nav-icon fa fa-users"></i>
                                <p>Thành viên</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action( "Index", "Transteam")">
                                <i class="nav-icon fa fa-handshake-o"></i>
                                <p>Nhóm dịch</p>
                            </a>
                        </li>


                    </ul>
                </nav>
                <!-- /.sidebar-menu -->
            </div>
            <!-- /.sidebar -->
        </aside>


        <!-- /.content-wrapper -->
        <footer class="main-footer">
            <p><b>Theo dõi: </b>https://www.facebook.com/holocomicteam <i class="fa fa-facebook-square"></i></p>
            <p><b>Liên lạc: </b>holocomic@gmail.com <i class="fa fa-envelope"></i></p>
            <p>All right - HoloComicTeam</p>
        </footer>

